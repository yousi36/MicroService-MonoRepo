{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@app/lib": [
        "libs/lib/src"
      ],
      "@app/lib/*": [
        "libs/lib/src/*"
      ],
      "@app/libs": [
        "libs/libs/src"
      ],
      "@app/libs/*": [
        "libs/libs/src/*"
      ],
      "@app/my-library": [
        "libs/my-library/src"
      ],
      "@app/my-library/*": [
        "libs/my-library/src/*"
      ],
      "lib/.": [
        "libs/src"
      ],
      "lib/./*": [
        "libs/src/*"
      ]
    }
  }
}